<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:LocalFileSharing.DesktopUI.Styles">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml" />
        <ResourceDictionary Source="Fonts.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type Button}" x:Key="MainButton">
        <Setter Property="Background" Value="{StaticResource RosyHighlight}" />
        <Setter Property="Foreground" Value="{StaticResource Biscay}" />
        <Setter Property="BorderBrush" Value="{StaticResource Summertime}" />
        <Setter Property="BorderThickness" Value="3" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeRegular}" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="Width" Value="200" />
    </Style>

</ResourceDictionary>